+static void quark_uart_hal_write(struct x1000_port *priv,
+			      const unsigned char *buf, int tx_size)
+{
+	int i;
+	unsigned int thr;
+
+	for (i = 0; i < tx_size;) {
+		thr = buf[i++];
+		serial_out(priv, QUARK_UART_THR, thr);
